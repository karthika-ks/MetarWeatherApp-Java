<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome \nto\nMETAR Browser"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:textSize="50dp"
        android:gravity="center_horizontal"
        android:textStyle="bold|italic"/>

    <Button
        android:id="@+id/btn_search_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search by ICAO Code"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_welcome"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onSearchByCode"/>

    <Button
        android:id="@+id/btn_search_german_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search from German station list"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_search_code"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onSearchFromGermanStation"/>

</androidx.constraintlayout.widget.ConstraintLayout>