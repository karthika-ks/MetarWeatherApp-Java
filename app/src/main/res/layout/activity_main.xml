<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="viewModel"
                type="com.example.metarapp.viewmodel.MetarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
            android:text="CODE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/airport_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:id="@+id/edit_code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="ICAO Code"
            app:layout_constraintLeft_toRightOf="@id/airport_code"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@={viewModel.mCode}"/>
    <Button
            android:id="@+id/btn_get_metar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GET METAR"
            app:layout_constraintStart_toEndOf="@+id/edit_code"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()-> viewModel.onSendClicked()}"/>

    <TextView
            android:id="@+id/txt_metar_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edit_code"
            android:layout_marginTop="20dp"
            android:text="@{viewModel.decodedData}"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>