<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="viewModel"
                type="com.example.metarapp.viewmodel.MetarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lyt_edit_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:text="CODE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/airport_code"/>
            <EditText
                android:id="@+id/edit_code"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="ICAO Code"
                android:layout_marginStart="10dp"
                android:text="@={viewModel.mCode}"/>
            <Button
                android:id="@+id/btn_get_metar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GET METAR"
                android:onClick="@{()-> viewModel.onSendClicked()}"/>
        </LinearLayout>

    <TextView
            android:id="@+id/txt_metar_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/lyt_edit_code"
            android:layout_marginTop="20dp"
            android:text="@{viewModel.decodedData}"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        android:text="Update Cache"
        android:onClick="@{()-> viewModel.onUpdateCacheClicked()}"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>